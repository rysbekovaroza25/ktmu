<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="3dip" android:color="#3C272323" />
            <gradient android:angle="180" android:startColor="#3C272323" android:endColor="#3C272323" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="3dip" android:color="#3C272323" />
            <gradient android:angle="180" android:startColor="#3C272323" android:endColor="#3C272323" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="2dip" android:color="#3C141313" />
            <gradient android:angle="180" android:startColor="#3C141313" android:endColor="#3C141313" />
        </shape>
    </item>
</selector>