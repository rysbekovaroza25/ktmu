<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#4DB6AC" />
            <gradient android:angle="180" android:startColor="#4DB6AC" android:endColor="#4DB6AC" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#4DB6AC" />
            <gradient android:angle="180" android:startColor="#4DB6AC" android:endColor="#4DB6AC" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#009688" />
            <gradient android:angle="180" android:startColor="#009688" android:endColor="#009688" />
        </shape>
    </item>
</selector>