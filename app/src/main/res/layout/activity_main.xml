<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.MainActivity">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:transitionName="KTMU"
            android:id="@+id/login_logo"
            android:src="@drawable/splash_screen_page"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_username"
            android:hint="User name"
            android:textAlignment="center"
            android:padding="10dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:layout_marginTop="36dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/blue_stroke_back"
            app:layout_constraintTop_toBottomOf="@id/login_logo"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_password"
            android:hint="Password"
            android:textAlignment="center"
            android:padding="10dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:layout_marginTop="16dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/blue_stroke_back"
            app:layout_constraintTop_toBottomOf="@id/login_username"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:layout_marginTop="16dp"
            android:paddingStart="72dp"
            android:paddingEnd="72dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/blue_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:padding="5dp"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorGrey"
            android:alpha="0.7"
            android:layout_marginTop="16dp"
            android:id="@+id/login_forget_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_register_text"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorGreen"
            android:alpha="0.7"
            android:layout_marginTop="64dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_forget_text"
            android:text="Registration"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>