<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.adminPage.control.ControlFragment">

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/startData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="10dp"
        android:text="Start Data"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/regStartData"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/startData"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_stroke_back"
        android:gravity="center"
        android:hint="Start date"
        android:inputType="datetime"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/EndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:text="End Date"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/regEndData"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/EndDate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:hint="End date"
        android:inputType="datetime"
        android:background="@drawable/blue_stroke_back"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ekle_sil"
        android:layout_below="@+id/regEndData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Ekle-Sil"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/ESStartData"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@id/ekle_sil"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_stroke_back"
        android:gravity="center"
        android:hint="Start date"
        android:inputType="datetime"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ESEndData"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ekle_sil"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/blue_stroke_back"
        android:gravity="center"
        android:hint="End date"
        android:inputType="datetime"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LSS"
        android:layout_below="@+id/ESEndData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Lesson Success Submission"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/LSSStartData"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@id/LSS"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_stroke_back"
        android:gravity="center"
        android:hint="Start date"
        android:inputType="datetime"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/LSSEndData"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/LSS"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/blue_stroke_back"
        android:gravity="center"
        android:hint="End date"
        android:inputType="datetime"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGrey"
        android:textSize="14sp" />

    <Button
        android:id="@+id/control_edit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/LSSEndData"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/send_button"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="15dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />



</RelativeLayout>