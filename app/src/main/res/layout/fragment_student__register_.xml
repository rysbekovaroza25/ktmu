<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.adminPage.register.Student_Register_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/student_photo"
            android:layout_width="160dp"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/photo"
            tools:ignore="VectorDrawableCompat"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" />


        <TextView
            android:id="@+id/choose_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Choose photo"
            android:textColor="@color/colorGrey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/student_number"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student Id"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/student_name"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/student_number"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/student_surname"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/student_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student surname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/student_semester"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/student_surname"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student semester"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/fac_sp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/choose_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"/>

        <Spinner
            android:id="@+id/dep_sp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/fac_sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/fac_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_below="@+id/choose_photo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_toEndOf="@+id/fac_sp"
            android:layout_toRightOf="@+id/fac_sp"
            android:text="Faculty"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/dep_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fac_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/dep_sp"
            android:layout_toRightOf="@+id/dep_sp"
            android:text="Department"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/student_submit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/dep_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/send_button"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="15dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>

</RelativeLayout>