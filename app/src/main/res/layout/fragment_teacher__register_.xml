<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.adminPage.register.Teacher_Register_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/teacher_number"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Teacher number"
            android:layout_centerHorizontal="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/teacher_name"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teacher_number"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Teacher name"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/teacher_surname"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teacher_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Teacher surname"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/teacher_login"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teacher_surname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Teacher login"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/teacher_password"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teacher_login"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Teacher password"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

        <Button
            android:id="@+id/teacher_submit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/teacher_password"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:background="@drawable/send_button"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="15dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </RelativeLayout>

</RelativeLayout>