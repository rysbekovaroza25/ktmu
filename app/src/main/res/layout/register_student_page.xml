<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterStudentPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/student_photo"
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/photo"
            app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/submit_photo"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/send_button"
            android:fontFamily="@font/roboto_medium"
            android:padding="15dp"
            android:text="@string/choose_photo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/fac_sp"
            android:layout_width="169dp"
            android:layout_height="42dp"
            android:layout_below="@+id/dep_sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="185dp" />

        <Spinner
            android:id="@+id/dep_sp"
            android:layout_width="169dp"
            android:layout_height="45dp"
            android:layout_below="@+id/submit_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/submit_student"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_below="@+id/dep_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/send_button"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="15dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dep_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fac_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/fac_sp"
            android:layout_toRightOf="@+id/fac_sp"
            android:text="Department"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/fac_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/submit_photo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toEndOf="@+id/dep_sp"
            android:layout_toRightOf="@+id/dep_sp"
            android:text="Faculty"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/student_number"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student number"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/student_name"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/student_number"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/student_surname"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/student_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/student_photo"
            android:layout_toRightOf="@+id/student_photo"
            android:background="@drawable/blue_stroke_back"
            android:gravity="center_horizontal"
            android:hint="Student surname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGrey" />

    </RelativeLayout>


</RelativeLayout>